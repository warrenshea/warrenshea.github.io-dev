<%- include(`${process.env.PWD}/_dev/_layouts/_default.head.ejs`, pageData) %>
    <main class="pb:96px" role="main">

      <section class="row py:32px">
        <h1 class="w:12 play:bold fs:40px color:eerie-black">TinyMCE 7 Examples</h1>
      </section>

      <section class="row">
        <div class="w:12 pb:16px">
          <h2 class="play pb:8px">Basic version</h2>
          <p class="pb:8px">Used for <em>inside</em> headings (but not for headings themselves). See options, below.</p>
          <p class="pb:8px"><strong>String version</strong> is used for string + character map (e.g. &lt;title&gt;). Cannot superscript or bold/italicize/hyperlink.
        </div>
        <div class="w:6">
          <textarea id data-module="tinymce" data-tinymce-type="basic" data-tinymce-onupdate-func="storm_eagle.tinymce.force_update_preview" data-tinymce-onload-element="editor-heading-1" data-tinymce-preview="editor-heading-1,editor-heading-2,editor-heading-3,editor-heading-4,editor-anchor,editor-button"></textarea>
        </div>
        <div class="w:6">
          <div class="pb:16px">
            Headings Example:
            <div class="b-silver:1px p:8px brr:8px text-align:center display:flex flex-dir:col align:center align:middle">
              <h1 class="display:inline heebo">H1: <span id="editor-heading-1">Placeholder...</span></h1>
              <h2 class="display:inline heebo">H2: <span id="editor-heading-2"></span></h2>
              <h3 class="display:inline heebo">H3: <span id="editor-heading-3"></span></h3>
              <h4 class="display:inline heebo">H4: <span id="editor-heading-4"></span></h4>
            </div>
          </div>
          <div class="pb:16px">
            Anchor example:
            <div class="b-silver:1px p:8px brr:8px text-align:center">
              <a class="anchor:blue" id="editor-anchor"></a>
            </div>
          </div>
          <div>
            Button example:
            <div class="b-silver:1px p:8px brr:8px text-align:center">
              <button class="button:blue" id="editor-button"></button>
            </div>
          </div>
        </div>
      </section>

      <section class="row">
        <div class="w:12 pb:16px">
          <h2 class="display:inline play">Advanced version</h2>
        </div>
        <div class="w:12 pb:16px">
          <div id="editor-advanced" class="brr:8px b-silver:1px mb:16px bgc:white p:8px" style="min-height:100px"><h1 class="heebo">Advanced Placeholder Text...</h1>
          </div>
          <textarea id data-module="tinymce" data-tinymce-type="advanced" data-tinymce-onupdate-func="storm_eagle.tinymce.force_update_preview" data-tinymce-onload-element="editor-advanced" data-tinymce-preview="editor-advanced"></textarea>
        </div>
      </section>

      <hr>

      <section class="row">
        <div class="w:12 pb:16px">
          <h2 class="display:inline play">Requirements</h2>
        </div>

        <div class="w:12">
          <legend class="align-self:centered heebo:bold">Legend:</legend>
          <dl class="row0 w:6 b-onyx:1px p:8px mb:32px">
            <dt class="w:3 px:4px display:flex align:middle align:right">[blank]</dt>
            <dd class="w:9 px:4px display:flex align:middle text-align:left ml:0">Not required</dd>
            <dt class="w:3 px:4px display:flex align:middle align:right"><div class="display:inline-flex ic ic-type:solid ic-color:positive ic-size:24px ic-name:check"></div></dt>
            <dd class="w:9 px:4px display:flex align:middle text-align:left ml:0">Available and implemented in this example</dd>
            <dt class="w:3 px:4px display:flex align:middle align:right"><div class="display:inline-flex ic ic-type:solid ic-color:warning ic-size:24px ic-name:check"></div></dt>
            <dd class="w:9 px:4px display:flex align:middle text-align:left ml:0">Likely available but not implemented</dd>
            <dt class="w:3 px:4px display:flex align:middle align:right"><div class="display:inline-flex ic ic-type:solid ic-color:negative ic-size:24px ic-name:times"></div></dt>
            <dd class="w:9 px:4px display:flex align:middle text-align:left ml:0">Not available</dd>
          </dl>
        </div>

        <table class="w:12 table-b-eerie-black:1px td-p:8px th-p:8px">
          <caption>
