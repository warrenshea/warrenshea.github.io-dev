{
  "name": "warrenshea.github.io",
  "version": "3.0.0",
  "description": "Warren Shea's Sandbox, Code Examples, Notes, and Misc",
  "main": "index.js",
  "author": "Warren Shea",
  "license": "ISC",
  "scripts": {
    "start": "npm run sass:build && concurrently \"npm run sass:watch\" \"npm run server\"  \"npm run browsersync\"",
    "sass:build": "sass _dev/stylesheets/:_dev/stylesheets --style compressed",
    "sass:watch": "sass --watch _dev/stylesheets/:_dev/stylesheets --style compressed",
    "browsersync": "node scripts/browser-sync-reload.mjs",
    "server": "nodemon --env-file=.env app.mjs",
    "build": "node --env-file=.env scripts/build.mjs"
  },
  "devDependencies": {
    "browser-sync": "^3.0.4",
    "concurrently": "^9.2.1",
    "ejs": "^4.0.1",
    "express": "^5.2.1",
    "nodemon": "^3.1.11",
    "sass": "^1.97.3"
  },
  "nodemonConfig": {
    "ext": "mjs,js,html,ejs,css,scss",
    "ignore": [
      "_dist",
      "node_modules"
    ],
    "watch": [
      "_dev",
      "server.js"
    ]
  }
}
